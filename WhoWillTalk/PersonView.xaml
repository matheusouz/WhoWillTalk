<?xml version="1.0" encoding="utf-8"?>

<HorizontalStackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   xmlns:whoWillTalk="clr-namespace:WhoWillTalk"
   x:Class="WhoWillTalk.PersonView"
   x:DataType="whoWillTalk:PersonViewModel"
   Opacity="{Binding Opacity}">

    <Frame
        HeightRequest="64"
        WidthRequest="64"
        IsClippedToBounds="True"
        CornerRadius="32">

        <Image
            HeightRequest="64"
            WidthRequest="64"
            Source="{Binding Source}"
            Aspect="AspectFit"/>

    </Frame>

    <Label
        Text="{Binding Name}"
        Margin="16,0,0,0"
        VerticalOptions="Center"
        FontSize="20"
        FontAttributes="Bold"/>

</HorizontalStackLayout>